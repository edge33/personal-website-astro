---
import plainwhiteConfig from '../plainwhite.config';
import DarkMode from './DarkMode/DarkMode.astro';

interface Props {
    condensedClass: string;
}

const { condensedClass } = Astro.props;

const {
    plainwhite: { dark_mode, social_links },
} = plainwhiteConfig;

const {
    linkedIn,
    twitter,
    github,
    email,
    flickr,
    gitlab,
    facebook,
    instagram,
    pinterest,
    soundcloud,
    youtube,
    telegram,
    dribbble,
    stackoverflow,
} = social_links as { [key: string]: string };
---

<>
    <ul class=`social about-footer ${condensedClass}`>
        {
            github && (
                <li>
                    <a
                        aria-label="github"
                        href={`https://github.com/${github}`}
                        target="_blank"
                    >
                        <i class="icon-github-circled" />
                    </a>
                </li>
            )
        }
        {
            gitlab && (
                <li>
                    <a
                        aria-label="gitlab"
                        href={`https://gitlab.com/${gitlab}`}
                        target="_blank"
                    >
                        <i class="icon-gitlab" />
                    </a>
                </li>
            )
        }
        {
            linkedIn && (
                <li>
                    <a
                        aria-label="linkedin"
                        href={`https://www.linkedin.com/${linkedIn}`}
                        target="_blank"
                    >
                        <i class="icon-linkedin-squared" />
                    </a>
                </li>
            )
        }
        {
            twitter && (
                <li>
                    <a
                        aria-label="twitter"
                        href={`https://twitter.com/${twitter}`}
                        target="_blank"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            height="1em"
                            viewBox="0 0 512 512"
                        >
                            <path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
                        </svg>
                    </a>
                </li>
            )
        }

        {
            instagram && (
                <a
                    aria-label="instagram"
                    href={`https://instagram.com/${instagram}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-instagram" />
                    </li>
                </a>
            )
        }
        {
            facebook && (
                <a
                    aria-label="facebook"
                    href={`https://facebook.com/${facebook}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-facebook-squared" />
                    </li>
                </a>
            )
        }
        {
            youtube && (
                <a
                    aria-label="youtube"
                    href={`https://youtube.com/${youtube}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-youtube" />
                    </li>
                </a>
            )
        }
        {
            pinterest && (
                <a
                    aria-label="pinterest"
                    href={`https://pinterest.com/${pinterest}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-pinterest-squared" />
                    </li>
                </a>
            )
        }
        {
            dribbble && (
                <a
                    aria-label="dribbble"
                    href={`https://dribbble.com/${dribbble}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-dribbble" />
                    </li>
                </a>
            )
        }
        {
            flickr && (
                <a
                    aria-label="flickr"
                    href={`https://flickr.com/${flickr}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-flickr" />
                    </li>
                </a>
            )
        }
        {
            telegram && (
                <a
                    aria-label="telegram"
                    href={`https://t.me/${telegram}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-telegram" />
                    </li>
                </a>
            )
        }
        {
            soundcloud && (
                <a
                    aria-label="soundcloud"
                    href={`https://soundcloud.com/${soundcloud}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-soundcloud" />
                    </li>
                </a>
            )
        }
        {
            email && (
                <a aria-label="email" href={`mailto:${email}`} target="_blank">
                    <li>
                        <i class="icon-mail-alt" />
                    </li>
                </a>
            )
        }
        {
            stackoverflow && (
                <a
                    aria-label="stackoverflow"
                    href={`https://stackoverflow.com/users/${stackoverflow}`}
                    target="_blank"
                >
                    <li>
                        <i class="icon-stack-overflow" />
                    </li>
                </a>
            )
        }
    </ul>
    <!-- {
        navigation && (
            <nav class={`navigation about-footer ${condensedClass}`}>
                <ul>
                    {navigation.map(
                        ({ url, title }: { url: string; title: string }) => (
                            <li>
                                <a href={url}>{title}</a>
                            </li>
                        )
                    )}
                </ul>
            </nav>
        )
    } -->
    <p class={`about-footer ${condensedClass}`}>
        &copy;
        {new Date().getFullYear()}
    </p>
    {dark_mode && <DarkMode condensedClass={condensedClass} />}
</>
